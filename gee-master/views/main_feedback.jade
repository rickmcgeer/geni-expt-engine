extends layout
block pageHeader
	div.pageHeader Feedback
block content
	div Thanks for taking the time to give us feedback on PlanetIgnite.
	form(method="get", action="mailto:rick.mcgeer@us-ignite.org, acb@cs.princeton.edu")
		table
			tr
				td Name
				td: input(type="text", name="name", placeholder="Your Name", size=30)
			tr
				td Email
				td: input(type="text", name="mail", placeholder = "Your Email", size=20)
			tr
				td Subject
				td: input(type="text", name="subject", placeholder="Subject", size=50)
			tr
				td Additional Comments
				td: textarea(name="body", rows=10, cols=50, value=bugreport_body)
			tr
				td(colspan=2, style="text-align:center")
					button(type="submit") Submit