extends user_layout
block custHead
    if status=="Processing"
        meta(http-equiv="refresh", content="30")
block userPageOptions
    a.pageOptions(href='/slice/free') Delete Slicelet #{slice}
    a.pageOptions(href='/slice/renew') Renew Slicelet #{slice}
    a.pageOptions(href='/slice/download') Download Slicelet File
block content
    div User #{user} logged in, currently has slicelet #{slice}, which expires on #{date}, runs with image #{image} and is in state
        span(style="color:#{color}")  #{status}
        if ports.length > 0
           p With port mapping
           table(border=1)
             tr
               th Host
               th Container
              each port in ports
               tr
                 td #{port.host}
                 td #{port.container}
