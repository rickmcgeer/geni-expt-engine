extends layout
block pageHeader
	div.pageHeader User #{user} Not A GEE Admin
block content
	div Sorry, #{user}, you have requested a page only visible to GEE Administrators.
	div If you are interested in becoming a GEE Administrator, please use this form to contact us.
	div
		em Be warned: sign up for this and we're going to ask you to do some work.
	- var subject="Please add " + user + " as a GEE Administrator";
	form(method="get", action="mailto:rick.mcgeer@us-ignite.org, acb@cs.princeton.edu")
		table
			tr
				td Name
				td: input(type="text", name="name", placeholder="Your Name", size=30)
			tr
				td Email
				td: input(type="text", name="mail", placeholder="#{user}", readonly, size=20)
			tr
				td Subject
				td: input(type="text", name="subject", placeholder=subject, readonly, size=subject.length + 3)
			tr
				td Additional Comments
				td: textarea(name="body", rows=4, cols=50)
			tr
				td(colspan=2, style="text-align:center")
					button(type="submit") Submit